mixin reviews-list()
  ul(class="reviews__list list-reset")
    each review in reviews
      li(
        class=`
          reviews__item
          reviews__item--no-js
          ${review.visibility ? "reviews__item--visible" : ""}
        `
      )
        article(class="reviews__review")
          p(class="reviews__review-name").
            #{review.name}
          p(class="reviews__review-date").
            #{review.date}
          div(class="reviews__review-rate")
            - for (let i = 0; i < review.rate; i++)
              img(
                src="img/star.svg"
                width="15"
                height="15"
                alt=i
              )
          p(class="reviews__review-text").
            #{review.text}
        button(
          class="reviews__item-open-button reviews__item-open-button--no-js"
          type="button"
        ).
          Читать полностью

section(class="reviews")
  h2(class="reviews__title").
    Отзывы
  +reviews-list()
  button(
    class="reviews__show-button reviews__show-button--no-js call-button"
    type="button"
  ).
    Все отзывы

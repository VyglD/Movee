mixin social-item(modificator, label)
  li(class="placement__social-item")
    a(
      class=`placement__social-link placement__social-link--${modificator}`
      href="#blank"
      aria-label=label
    )

section(class="placement")
  h2(class="visually-hidden").
    Наше расположение
  div(class="placement__map-wrapper")
    img(
      src="img/map.png"
      width="1924"
      height="666"
      alt="Расположение нашего оффиса"
    )
  div(class="placement__info-wrapper")
    img(
      class="placement__logo"
      width="115"
      height="37"
      src="img/logo.svg"
      alt="MOVEE"
    )
    ul(class="placement__contacts-wrapper")
      li(class="placement__contact")
        p(class="placement__adress").
          Москва, Волгоградский пр-т, 38
      li(class="placement__contact")
        a(
          class="placement__phone"
          href="tel:+7800801213"
        ).
          8 (800)-080-12-13
      li(class="placement__contact placement__contact--mail")
        a(
          class="placement__mail"
          href="mailto:hello@movee.ru"
        ).
          hello@movee.ru
    ul(class="placement__social-list list-reset")
      +social-item(`youtube`, `Переход на наш YouTube канал`)
      +social-item(`vk`, `Переход в нашу группу вКонтакте`)
      +social-item(`fb`, `Переход в нашу группу FaceBook`)
      +social-item(`instagram`, `Переход в нашу страницу в Instagram`)

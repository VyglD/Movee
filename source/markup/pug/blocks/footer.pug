include ../mixins/social-list.pug

mixin nav-item(link, title)
  li(class="footer__nav-item")
    a(href=link class="footer__link footer__link--nav").
      !{title}

footer(class="footer")
  ul(class="footer__blocks list-reset")
    li(class="footer__block")
      img(
        class="footer__logo"
        width="115"
        height="37"
        src="img/logo.svg"
        alt="MOVEE"
      )
      a(
        class="footer__link footer__link--policy"
        href="#blank"
      ).
        Политика конфиденциальнности
      a(
        class="footer__link footer__link--agreement"
        href="#blank"
      ).
        Соглашение на обработку персональных данных
    li(class="footer__block")
      nav
        ul(class="footer__nav-list list-reset")
          +nav-item(`#header`, `Главная`)
          +nav-item(`#cost`, `Цена`)
          +nav-item(`#autopark`, `Автопарк`)
          +nav-item(`#reviews`, `Отзывы`)
          +nav-item(`#placement`, `Контакты`)
    li(class="footer__block")
      +social-list(`footer__social-list`)
      a(
        class="footer__link footer__link--mail"
        href="mailto:hello@movee.ru"
      ).
        hello@movee.ru
    li(class="footer__block")
      a(
        class="footer__call-button call-button"
        href="#callback"
      ).
        Обратный звонок
      a(
        class="footer__link footer__link--phone"
        href="tel:+78000801213"
      ).
        8 (800)-080-12-13
